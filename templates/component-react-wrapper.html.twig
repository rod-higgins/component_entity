{#
  component-react-wrapper.html.twig
  Wrapper template for React-rendered components
#}
<div{{ attributes
  .addClass('component-react-root')
  .addClass('component-react-root--' ~ component_type|clean_class)
  .setAttribute('id', component_id)
  .setAttribute('data-component', component_type)
  .setAttribute('data-hydration', hydration_method)
  .setAttribute('data-entity-id', entity_id)
}}>
  {% if ssr_content %}
    {# Server-side rendered content for SEO and initial paint #}
    {{ ssr_content|raw }}
  {% elseif loading_placeholder %}
    {# Loading placeholder while React component loads #}
    <div class="component-loading" aria-busy="true" aria-live="polite">
      <span class="visually-hidden">{{ 'Loading component'|t }}</span>
      {% if show_spinner %}
        <div class="component-loading__spinner"></div>
      {% endif %}
    </div>
  {% endif %}
  
  {# Fallback content for no-JS scenarios #}
  <noscript>
    <div class="component-fallback">
      {% if fallback_content %}
        {{ fallback_content }}
      {% else %}
        <p>{{ 'This component requires JavaScript to be enabled.'|t }}</p>
      {% endif %}
    </div>
  </noscript>
</div>